<section class="user-card">
  <h2>{{user}}'s todos</h2>
  <p>Email: {{email}}</p>
  <p>Todo list</p>
  <ul>
    {{#unless todos.length}}
      <a href="/add_todo">Start adding todos...</a>
    {{/unless}}
    {{#each todos}}
      <li class="{{ternary this.is_complete 'is-complete' ''}}">{{this.content}}</li>
      <a href="/edit_todo?id={{this.id}}">Edit</a>
    {{/each}}
  </ul>
</section>